#comments{
	border:3px solid #eee; width:500px;margin-bottom:10px;
	
}
#comTitle{background:#999;}
#comUser{font-size:20px; color:#666;}
#comImg{border:1px solid #eee; width:50px;float:left;background:#ccc; padding:7px;}
