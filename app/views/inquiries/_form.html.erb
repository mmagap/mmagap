<%= form_for inquiry do |f| %>
  <% if inquiry.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% inquiry.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div>
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </div>
  
  <div>
    <%= f.label :email %><br/>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :subject %><br/>
    <%= f.text_field :subject %>
  </div>
  <div>
    <%= f.label :message %><br/>
    <%= f.text_area :message, :cols => "30", :rows => "10" %>
  </div>
  
  <div>
    <%= f.submit "Send" %>
  </div>
<% end %>