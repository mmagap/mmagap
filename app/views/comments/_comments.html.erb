<div id="comWrap">
  <h1>Comments</h1>
  <% @comments.order('id DESC').each_with_index do |comment,index| %>
    <%= render(:template =>"comments/comment", :layout => nil , :locals => { comment: comment, temp: 0 }) %>
    <% 
      temp = 0 
      content = ""
    %>
    <%= raw recursive_comments(comment, temp, content) unless comment.comments.empty? %>
  <% end %>
</div>


